@model IEnumerable<Cart>

@{
    ViewData["Title"] = "View Cart";
}

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemCodeNavigation.ItemName</td> 
                    <td>@item.ItemCodeNavigation.ItemPrice</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

    <p>Total Price: @ViewData["TotalPrice"]</p>

    <div>
        <a asp-action="Search" asp-controller="Items">Continue Shopping</a>
    </div>
}